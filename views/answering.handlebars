<nav class="navbar navbar-expand-lg navbar-dark bg-blue justify-content-between mb-3">
  <div class="container">
    <a class="navbar-answer" href="#"><h2 class="display-6">Employee Selecting Answer</h2></a>

    <a class="btn btn-primary" type="submit" href="/login" role="button">Edit Name?</a>
  </div>
</nav>

<div class="container">
  <div class="col-md-12">
    <div class="jumbotron jumbotron-fluid pt-4">
      <div class="container">
        <form class="favAnswers" action="/answering/{{username}}" method="post">
          <p class="lead mb-4">Please select one of the answer below:</p>
          {{#if messages.success}}
            <div class="alert alert-success" role="alert">
              {{messages.success}}
            </div>
          {{/if}}

          <div class="col-md-12 text-center mb-3">
            <div class="btn-group" data-toggle="buttons">
              <input type="checkbox" name="answer" value="Yes" {{#if AllAnswers.Yes}} checked {{/if}}> Yes
              <input type="checkbox" name="answer" value="No" {{#if AllAnswers.No}} checked {{/if}}> No
              <input type="checkbox" name="answer" value="Null" {{#if AllAnswers.Null}} checked {{/if}}> Null
            </div>
            <button type="submit" class="btn btn-primary btn-lg btn-block">Submit</button>
            
            <!-- //Allow only one checkbox to be selected at once -->
            <script>
              $(document).ready(function() {
                $('input:checkbox').click(function() {
                  $('input:checkbox').not(this).prop('checked', false);
                });
              });
            </script>
          </div>

          <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
            </div>
          </div>
      </div>
      </form>
    </div>
  </div>
</div>
